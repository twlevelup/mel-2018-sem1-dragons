<div id="game-page">
    <div id="header">
        <span class="icon" id="home-icon">
            <img src="/Resources/homeButton.png" alt="homeicon" width="28" height="25">
        </span>
    </div>
    <div class="big-container">
        <div id="top-container">
            <div id="random-wrap">
            <div id="random-chosen">{{expectedShape}}</div>
            </div>
        </div>
        <div id="central-container">
            <div id="left-colors-box"></div>
            <div id="central-area">
                <div id="central-top-container">
                   <div id="selectedShape"></div>
                   <div id="popUp">{{popUp}}</div>
                </div>
                <div id="central-bottom-container">
                    <div id="bottom-patterns-box"></div>
                </div>
            </div>
            <div id="right-shapes-box">
                {{#each shapes}}
                    <div class="shape">{{this}}</div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

